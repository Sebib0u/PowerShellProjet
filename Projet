Enter-PSSession -ComputerName SRVSEB -Credential SEB\Administrator #prise en charge du serveur à distance
Import-Module GroupPolicy # Une fois GPMC installé, vous pouvez charger le module de stratégie de groupe.
Get-Command –Module GroupPolicy # Pour obtenir une liste des applets de commande disponibles dans le module.
Get-GPO -All # M'affiche toutes les GPO de mon serveur.
New-GPO # Créer une GPO.

#GPO 1 (général : font d'écran)
    $GPOname = 'Wallpaper'
    New-GPO -Name $GPOname 
        # A change rpour font d'écran. Voir si possibilité de ne pas passer par la table de registre
        Set-GpRegistryValue -Name $GPOname -key "HKEY_CURRENT_USER\Control Panel\Desktop" -ValueName "Wallpaper" -type string -value "C:\Wallpeper\image.jpg"
        # Permet de linker vers l'OU, a changer le lien "Target"
        Set-GPLink -Name $GPOname -Target "ou=general,dc=seb,dc=com" -LinkEnabled Yes
        Gpupdate /force

#GPO 2 (général : Verrouiller le commpte si 3 échecs mdp)
    $numberOfErrors = Read-Host -Prompt "A partir de combien d'erreurs voulez vou sbloquer l'utilisateur ? "
    $TimeOfBan = Read-Host -Prompt "Pendant combien de temps ? "
    $GPO2name = 'locking'
    $SecurityEdit= $GPO.GetSecuritySettings()
    $SecurityEdit.AccountLockoutThreshold = $numberOfErrors
    $SecurityEdit.AccountLockoutDuration = $TimeOfBan
    Set-GPLink -Name $GPO2name -Target "ou=general,dc=seb,dc=com" -LinkEnabled Yes
    Gpupdate /force

#GPO 3 (Installer des logiciels)
    $GPO3name = 'Installer'
